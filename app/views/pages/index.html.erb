<div class="hero-unit">
  <h3>Hotel search</h3>
  <p>Search for hotels in Mozambique. Fast. Simple. Secure.</p>
  <%= simple_form_for(@search, :html => {:class => 'form-horizontal' }) do |f| %>
  <div class="row-fluid">
    <div class="span4 well main-search-area">
      <h4>Step 1: Where</h4>
      <br/>
      <%= f.input :keyword, label: false %>
    </div>
    <div class="span4 well main-search-area">
      <h4>Step 2: When</h4>
    </div>
    <div class="span4 well main-search-area">
      <h4>Step 3: What</h4>
    </div>
  </div>
  <% end %>
</div>